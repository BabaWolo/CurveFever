<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("header")%>
    <link href="/css/home.css" rel="stylesheet" />
    <link href="/css/modal.css" rel="stylesheet" />
    <script src="/javascript/home_login.js"></script>
</head>
<body>
    <div class="logo">
        <h1><span style="color: white">LINE</span></h1>
        <h2>
            <span style="color: #A574AA">F</span>
            <span style="color: #5CB1E0">E</span>
            <span style="color: #A9CE3C">V</span>
            <span style="color: #FFCE3A">E</span>
            <span style="color: #EF625A">R</span>
        </h2>
    </div>
    <div class="login-container">
        <form>
            <div class="input-container">
                <input class="text-input" type="text" placeholder="Email">
                <i class="fa-solid fa-envelope icon"></i>
            </div>
            <div class="input-container">
                <input class="text-input" type="text" placeholder="Password">
                <i class="fa-solid fa-lock icon"></i>
            </div>
            <div class="input-container">
                <button type="button" id="loginButton" class="button-input" onclick="location.href = '/home'">
                    LOGIN
                </button>
                <div style="width: 30px"></div>
                <button type="button" id="loginButton" class="button-input" onclick="location.href = '/home'">
                    SIGN UP
                </button>
            </div>
        </form>
        <div class="loginFooter">
            <p><a href="/home">Play as guest</a></p>
            <p><a href="javascript:passwordModal();">Forgot password</a></p>
        </div>
    </div>
    <!-- Forgot password modal -->
    <div id="pwd-modal" class="modal">
        <div class="modal-container">
            <header class="modal-header">
                <button type="button" id="modalCloseButton" class="green-btn" onclick="document.getElementById('pwd-modal').style.display='none'">Close</button>
                <h2>Forgotten password</h2>
            </header>
            <div class="modal-content">
                <p>An email with recovery password has been sent to example@example.org</p>

            </div>
        </div>
    </div>
</body>
</html>